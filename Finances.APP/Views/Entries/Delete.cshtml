@model Finances.Database.Entities.Entry

@{
    ViewData["Title"] = "Excluir Lançamento";
}

<h1>Excluir Lançamento</h1>

<h3>Tem certeza que deseja remover este lançamento?</h3>
<div>
    <h4>Detalhes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Valor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reserve)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reserve.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastUpdate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastUpdate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
